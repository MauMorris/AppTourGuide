<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="6dp">

        <RelativeLayout
            android:layout_width="115dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_zona"
                android:layout_width="115dp"
                android:layout_height="110dp"
                android:scaleType="fitXY"
                android:src="@drawable/cdmx_1" />

            <TextView
                android:id="@+id/text_view_title_zona"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_zona"
                android:layout_marginTop="4dp"
                android:layout_marginStart="4dp"
                android:maxLines="2"
                android:text="Hilton Mexico city Reforma"
                android:textColor="@color/primaryText"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_view_content_zona"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_view_title_zona"
                android:layout_marginTop="2dp"
                android:layout_marginStart="4dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="Una importante torre moderna"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/text_view_numero_zona"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_view_content_zona"
                android:layout_marginBottom="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:text="0"
                android:textSize="12sp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>