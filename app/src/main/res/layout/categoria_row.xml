<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row_categorias_completas"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/padding_container"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/image_row"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:scaleType="centerInside"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_all"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_title_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/row_category"
            android:text="Museos"
            android:textColor="@color/primaryText"
            android:textSize="@dimen/ayuda_texto_portada" />

        <TextView
            android:id="@+id/text_view_content_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guia de museos de la ciudad" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view_number_stars_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:layout_marginEnd="@dimen/row_category"
                android:text="4.5" />

            <ImageView
                android:id="@+id/image_star_row"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:padding="6dp"
                android:src="@drawable/star_18dp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>