<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_view_ubicacion"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginEnd="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/cdmx_1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_ubicacion_locally"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My House"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_view_latitud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latitud" />

        <TextView
            android:id="@+id/text_view_longitud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Longitud" />

        <TextView
            android:id="@+id/text_view_snipet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Snipet" />

    </LinearLayout>
</LinearLayout>
